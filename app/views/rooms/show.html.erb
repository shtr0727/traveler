<h2 class="mb-4">チャットルーム</h2>

<div class="chat-box border p-3 mb-4" style="height: 400px; overflow-y: scroll;">
  <% @messages.each do |message| %>
    <div class="mb-2">
      <% if message.user_id == current_user.id %>
        <p class="text-right"><strong>あなた:</strong> <%= message.content %></p>
      <% else %>
        <p><strong><%= @another_entry.user.name %>:</strong> <%= message.content %></p>
      <% end %>
    </div>
  <% end %>
</div>

<%= form_with(model: [@room, @message], local: true) do |f| %>
  <div class="form-group">
    <%= f.text_area :message, rows: 3, class: "form-control", placeholder: "メッセージを入力..." %>
  </div>
  <%= f.submit "送信", class: "btn btn-primary mt-2" %>
<% end %>